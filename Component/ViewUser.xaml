<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="LessonProj.Component.ViewUser"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LessonProj.Component"
    xmlns:modal="clr-namespace:LessonProj.Modal"
    x:DataType="modal:User">

    <Border Style="{StaticResource ViewRecord}">
        <StackLayout Orientation="Horizontal" Spacing="8">
            <StackLayout
                HorizontalOptions="FillAndExpand"
                Orientation="Vertical"
                Spacing="4">


                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Border Style="{StaticResource BlankKey}">
                        <Label Text="UUID" WidthRequest="80" />
                    </Border>
                    <Border Style="{StaticResource BlankValue}">
                        <Label Text="{Binding Uuid}" />
                    </Border>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Border Style="{StaticResource BlankKey}">
                        <Label Text="Name" WidthRequest="80" />
                    </Border>
                    <Border Style="{StaticResource BlankValue}">
                        <Label Text="{Binding Name}" />
                    </Border>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Border Style="{StaticResource BlankKey}">
                        <Label Text="Lastname" WidthRequest="80" />
                    </Border>
                    <Border Style="{StaticResource BlankValue}">
                        <Label Text="{Binding Lastname}" />
                    </Border>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Border Style="{StaticResource BlankKey}">
                        <Label Text="Phone" WidthRequest="80" />
                    </Border>
                    <Border Style="{StaticResource BlankValue}">
                        <Label LineBreakMode="TailTruncation" Text="{Binding Phone}" />
                    </Border>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Border Style="{StaticResource BlankKey}">
                        <Label Text="Mail" WidthRequest="80" />
                    </Border>
                    <Border Style="{StaticResource BlankValue}">
                        <Label Text="{Binding Mail}" />
                    </Border>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </Border>
</ContentView>